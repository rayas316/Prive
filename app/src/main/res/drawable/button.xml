<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="false">

        <shape android:shape="rectangle">


            <corners android:radius="8dp" />


            <gradient android:angle="90" android:endColor="#ffb2dd" android:startColor="#f06292" android:type="linear" />

        </shape>
    </item>


    <item android:state_pressed="true">

        <shape android:shape="rectangle">


            <corners android:radius="8dp" />


            <gradient android:angle="90" android:endColor="#f06292" android:startColor="#ffb2dd" android:type="linear" />

        </shape>
    </item>
</selector>